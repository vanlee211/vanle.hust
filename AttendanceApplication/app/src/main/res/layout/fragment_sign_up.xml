<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignUpFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textMSSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã số sinh viên:"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/editTextMSSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MSSV"
        android:layout_marginStart="10dp"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#8F2323"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/textViewNFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="ID_NFC: "
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textViewID_NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ảnh sinh viên: "
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="161dp"
        android:layout_height="156dp"
        android:src="@drawable/ic_avatar_default"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewFPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID_FPS: "
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textViewID_FPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>


</LinearLayout>